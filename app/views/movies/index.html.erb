<p style="color: green"><%= notice %></p>

<h1>Movies</h1>

<div id="movies">
  <h4>By genre</h4>
  <% @genre_counts.each do |genre, count| %>
    <p><%= "#{genre.capitalize}: #{count}" %></p>
  <% end %>

  <% @movies.each do |movie| %>
    <%= render movie %>
    <p>
      <%= link_to "Show this movie", movie %>
    </p>
  <% end %>
</div>

<%= link_to "New movie", new_movie_path %>
